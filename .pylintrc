[FORMAT]
max-line-length = 120

[MESSAGES CONTROL]
disable =
    C0301,  # line-too-long
    C0303,  # trailing-whitespace
    C0114,  # If module docstrings are not crucial for your project
    C0116,  # If function docstrings are not crucial for your project
    C0103,  # invalid-name
    W0612,  # unused-variable
    R1705,  # no-else-return